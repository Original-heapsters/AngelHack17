<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    tools:context="com.example.russell.myapplication.MainActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/shichifu_main"
        android:id="@+id/shichifu"
        android:layout_centerHorizontal="true"
        android:alpha="0.7"/>
    <Button
        android:text="Account settings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/goToSettings"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/GoProcess"/>
    <Button
        android:id="@+id/GoProcess"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Scan new Lotto ticket"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>
